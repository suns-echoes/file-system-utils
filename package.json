{
	"name": "@suns-echoes/file-system-utils",
	"version": "1.0.0",
	"description": "The file system utilities library.",
	"keywords": [
		"filesystem",
		"utilities",
		"utils"
	],
	"scripts": {
		"build": "npm run clean && npm run copy:src && npm run build:cjs && npm run build:esm",
		"build:cjs": "tsc --project ./tsconfig.dist.cjs.json",
		"build:esm": "tsc --project ./tsconfig.dist.esm.json",
		"copy:src": "mkdir dist && cp -r ./src ./dist/src",
		"clean": "rimraf ./dist/",
		"test": "cross-env TS_NODE_PROJECT=./tsconfig.test.json TS_NODE_FILES=true mocha --exit --r ts-node/register -r chai/register-expect -r ./setup/setup.ts",
		"coverage": "c8 npm run test",
		"lint": "eslint .",
		"ts": "tsc",
		"check": "npm run lint && npm run ts",
		"check:full": "npm run check && npm run coverage && npm run audit"
	},
	"homepage": "https://github.com/suns-echoes/file-system-utils",
	"repository": {
		"type": "git",
		"url": "https://github.com/suns-echoes/file-system-utils"
	},
	"author": "Aneta Suns <suns.echoes@gmail.com>",
	"license": "MIT",
	"engines": {
		"node": "16.13.0"
	},
	"devDependencies": {
		"@suns-echoes/exec": "^0.2.0",
		"@types/chai": "^4.2.22",
		"@types/chai-as-promised": "^7.1.4",
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^9.0.0",
		"@types/node": "^17.0.1",
		"@types/sinon-chai": "^3.2.6",
		"@typescript-eslint/eslint-plugin": "^5.5.0",
		"@typescript-eslint/parser": "^5.5.0",
		"c8": "^7.10.0",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.2.0",
		"esm": "^3.2.25",
		"fs-extra": "^10.0.0",
		"mocha": "^9.1.3",
		"rimraf": "^3.0.2",
		"sinon-chai": "^3.7.0",
		"ts-node": "^10.4.0",
		"typescript": "^4.4.4"
	}
}
